{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
          "@src/*": ["src/*"],
          "@components/*": ["src/components/*"],
          "@locales/*": ["src/locales/*"],
          "@typings/*": ["typings/*"],
          "@queries/*": ["src/queries/*"],
          "@mutations/*": ["src/mutations/*"],
          "*": ["typings/*"]
        },
        "strict": true,
        "noImplicitReturns": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5"
    },
    "include": [
        "./src/**/*",
        "./test/**/*"
    ]
}

